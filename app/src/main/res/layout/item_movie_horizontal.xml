<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <!-- Movie Poster -->
    <ImageView
        android:id="@+id/img_movie_poster"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:background="@drawable/bg_border"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/txt_movie_title"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/img_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/img_movie_poster" />

    <!-- Rating (Optional) -->
    <TextView
        android:id="@+id/tv_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/txt_rating_sample"
        android:textColor="#FFFF00"
        app:layout_constraintStart_toStartOf="@id/img_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

</androidx.constraintlayout.widget.ConstraintLayout>