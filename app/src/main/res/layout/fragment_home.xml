<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color_bg">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/welcome_back"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Osyyyy"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tvWelcome"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvWelcome"
                    android:layout_marginStart="6dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAvatarContainer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"  app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avt"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <!-- Search bar -->
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:hint="@string/txt_search_hint"
                    android:drawableStart="@drawable/icon_search"
                    android:drawablePadding="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40FFFFFF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/clHeader"/>

            <!-- Tab Layout -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabMovieFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:tabIndicatorColor="#A31C2D"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#FFFFFF"
                app:tabTextColor="#A3A3A3"
                tools:ignore="SpeakableTextPresentCheck" />

            <!-- ViewPager2 - ĐÃ SỬA CHIỀU CAO VÀ PADDING -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpMovieSlider"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toBottomOf="@id/tabMovieFilter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Location Warning -->
            <TextView
                android:id="@+id/tvLocationServiceWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_note_location"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/vpMovieSlider"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Cinema Section Title -->
            <TextView
                android:id="@+id/tvCinemaNear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cinema_near_you"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvLocationServiceWarning"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="20dp"/>

            <!-- Cinema RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCinemas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                app:layout_constraintTop_toBottomOf="@id/tvCinemaNear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_cinema"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>