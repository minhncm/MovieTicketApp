<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivCinemaLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_cinema"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvCinemaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_name_sample"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ivCinemaLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/llRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvCinemaName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/star_on"
                app:tint="#FF9800"/>

            <TextView
                android:id="@+id/tvCinemaRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_cinema_rating_sample"
                android:textColor="#FF9800"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvInfoLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_info_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/llRating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvCinemaInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_info_sample"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvInfoLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_address_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvCinemaInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvCinemaAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_address_sample"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvAddressLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvRoomsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_rooms_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvCinemaAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvRoomsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_cinema_rooms_count"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvRoomsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
